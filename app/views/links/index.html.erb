<ul>
  <div class="profile-image">
    <%= image_tag 'profile.jpg', alt: 'My Profile Picture' %>
  </div>

  <div class="introduction">
    <h2>Greetings! I'm Blake Ridgway</h2>
    <p>
      <strong>Systems & Network Administrator | Linux & Open Source Advocate | Ultra-Endurance Cyclist</strong>
    </p>
  </div>

  <ul>
    <% @links.each do |link| %>
      <li>
          <% safe_url = URI.parse(Link.new.url).scheme ? Link.new.url : "http://#{Link.new.url}" %>
          <%= link_to safe_url, safe_url, target: "_blank", class: "link-button" %>
          <strong><%= link.title %></strong>
          <p><%= link.description %></p>
        <% end %>
      </li>
    <% end %>
  </ul>


<%= link_to 'New Link', new_link_path, class: 'new-link-button' %>

